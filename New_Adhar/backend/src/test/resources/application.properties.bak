spring.datasource.url=jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.h2.console.enabled=false
spring.jpa.hibernate.ddl-auto=create-drop
spring.jpa.show-sql=true

# Mock Redis (If possible, or tests will fail if Redis is required by RateLimiter)
# Since we can't easily mock Redis without Testcontainers (which require Docker), 
# we might need to rely on the RateLimiterService handling connection failures gracefully 
# or use a mock bean in tests.
spring.data.redis.host=localhost
spring.data.redis.port=6379
